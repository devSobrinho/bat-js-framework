{
  "$schema": "http://json.schemastore.org/nodemon",
  "watch": [
    "src"
  ],
  "ignore": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts"
  ],
  "ext": "*.ts,*.json",
  "execMap": {
    "ts": "DEBUG=express* node -r tsconfig-paths/register -r @swc-node/register"
  },
  "signal": "SIGTERM",
  "quiet": true,
  "verbose": false
}